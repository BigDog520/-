.indexbox{
  display: flex;
  flex-wrap:wrap;
  /* background-color: #F0FDF8; */
  background-color: white;
}
.header{
  display: flex;
  border-bottom: 1px solid #ccc;  
  width:100%;
  height: 90rpx;
  align-items:center;
  padding-left: 30rpx;
}
.workList{
  display: flex;
  flex-wrap:wrap;
  border-bottom: 1px solid #ccc;  
  width: 100%;  
  justify-content: space-between;
  padding: 30rpx 30rpx;
  background-color: #FCFFFE;
}
.listLeft{
  display: flex;
  flex-wrap: wrap;
  width: 75%;
}
.name{
  width: 100%;
  font-size: 14px;
  padding-bottom: 10rpx;
}
.time,.info{
  font-size: 11px;
  color:#8b8b8b;
}
.listRight{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  width: 25%;
}

.sal{
  color: #74E8C2;
  font-size: 14px;
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.white{
  background-color: #D2E7E0;
}