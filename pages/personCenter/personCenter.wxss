page{
  height: 100%;
  width: 100%;
  background-color: #F0F0F0;
}
.register{
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.registebtn{
  width: 50%;
}
.isloginImg{
  width: 100%;
  margin-top:10%; 
  display: flex;
  justify-content: center;
}
.userinfo-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 5px solid #AEE8D5;
}
.userInfo{
  width: 100%;
  height: 50%;
  background-color: #74E8C2;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.userinfo-nickname{
  width: 100%;
  display: flex;
  justify-content: center;
  color: white;
}
.islogin{
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.updataInfo{
  height: 45rpx;
  border: 2px solid #74E8C2;
  background-color: white;
  padding:20rpx;
  border-radius: 20rpx;
  font-size: 13px;
}
.workInfo{
  width: 100%;
  height: 15%;
  display: flex;
  flex-wrap: nowrap;
}
.workInfo view{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
  background-color: white;

}
.otherInfo{
  width: 100%;
  height: 35%;
}
.wallet{
  margin-top: 40rpx;
  height: 30%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  padding: 0 30rpx;
}